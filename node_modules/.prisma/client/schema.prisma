datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model auth_user {
  id           Int       @id @default(autoincrement())
  password     String
  last_login   DateTime?
  is_superuser Boolean
  username     String    @unique
  first_name   String
  last_name    String
  email        String    @unique
  is_staff     Boolean
  is_active    Boolean
  date_joined  DateTime
}

model word_store {
  uuid        String   @unique
  word        String
  language    String
  level       String
  count       Int
  domain_list String
  in_dict     Boolean
  created_by  String
  created_at  DateTime
  updated_at  DateTime
}

model word_trash {
  uuid       String   @unique
  word       String
  created_by String
  created_at DateTime
  updated_at DateTime
}

model word_user {
  uuid        String   @unique
  user_id     String
  word        String
  familiarity Int
  language    String
  created_at  DateTime
  updated_at  DateTime
  domain_list String
  in_dict     Boolean
  alias       String
  note        String
}

model dict_de_level {
  id       Int    @unique
  lemma    String
  pos      String
  articles String
  level    String
  url      String
}

model dict_en {
  id        Int    @unique
  headword  String
  pos       String
  level     String
  inventory String
  notes     String
}

model word_example {
  uuid        String   @unique
  content     String
  user_id     String
  language    String
  created_at  DateTime
  updated_at  DateTime
  context     String
  familiarity Int
  source      String
  note        String
}

model word_example_lemma {
  uuid         String @unique
  lemma        String
  example_uuid String
}

model word_phrase {
  uuid        String   @unique
  user_id     String
  phrase      String
  familiarity Int
  language    String
  note        String
  created_at  DateTime
  updated_at  DateTime
}

model statistic_original {
  uuid       String   @unique
  content    String
  source     String
  source_id  String
  domain     String
  language   String
  level      String
  created_by String
  created_at DateTime
  updated_at DateTime
}

model statistic_text {
  uuid          String   @unique
  content       String
  version       Int
  original_uuid String
  created_by    String
  created_at    DateTime
  updated_at    DateTime
}

model statistic_sentence {
  uuid      String @unique
  sentence  String
  position  Int
  text_uuid String
}

model statistic_lemma {
  uuid          String @unique
  lemma         String
  sentence_uuid String
}

model statistic_correction_map {
  lemma      String @unique
  correction String
}

model blog {
  uuid        String   @unique
  user_id     String
  title       String
  description String
  content     String
  created_at  DateTime
  updated_at  DateTime
}

model qsa_card {
  uuid        String   @unique
  user_id     String
  question    String
  suggestion  String
  answer      String
  familiarity Int
  note        String
  created_at  DateTime
  updated_at  DateTime
}

model qsa_tag {
  uuid        String   @unique
  tag         String
  description String
  user_id     String
  created_at  DateTime
  updated_at  DateTime
}

model qsa_card_tag {
  uuid       String   @unique
  card_uuid  String
  tag_uuid   String
  created_at DateTime
  updated_at DateTime

  @@unique([card_uuid, tag_uuid])
}

model qsa_card_review {
  uuid           String   @unique
  interval_days  Int
  ease_factor    Int
  repetitions    Int
  familiarity    Int
  last_review_at DateTime
  next_review_at DateTime
}
